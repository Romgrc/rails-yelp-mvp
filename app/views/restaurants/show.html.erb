<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @restaurant.name %></h1>

      <div class="row">
        <div class="col-lg-8 my-4">
          <%= link_to "edit restaurant", edit_restaurant_path(@restaurant), class: "btn btn-primary" %>
          <%= link_to 'delete', restaurant_path(@restaurant), class: "btn btn-primary", method: 'delete', data: { confirm: 'Are you sure? Really?' } %>

          <p><%= @restaurant.address %></p>

          <%= render 'reviews/index', restaurant: @restaurant %>

          <%= render 'reviews/new', restaurant: @restaurant, review: @review %>


        </div>
      </div>
    </div>
  </div>
</div>




